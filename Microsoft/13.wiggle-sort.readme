class Solution {
    public void wiggleSort(int[] nums) {
        int n = nums.length;
        Arrays.sort(nums);
        int[] temp = new int[n];

        int end = n-1;
        for(int i = 1; i < n;i+= 2){
            temp[i] = nums[end];
            end--;
        }

        for(int i = 0; i < n;i+=2){
            temp[i] = nums[end];
            end--;
        }

        for(int i = 0; i < n;i++){
            nums[i] = temp[i];
        }
    }
}